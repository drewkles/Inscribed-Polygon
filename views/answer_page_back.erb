		   function draw(){
		   	var canvas = document.getElementById("canvas");
		      if (canvas.getContext) {
		        var cxt = canvas.getContext("2d");
		        var numberOfSides = 6,
		            size = 100,
		            Xcenter = 105,
		            Ycenter = 105;

		        cxt.beginPath();
		        cxt.lineWidth = 1;
		        cxt.moveTo (Xcenter +  size * Math.cos(0), Ycenter +  size *  Math.sin(0));          

		        for (var i = 1; i <= numberOfSides;i += 1) {
		            var movex = Xcenter + size * Math.cos(i * 2 * Math.PI / numberOfSides)
		            var movey = Ycenter + size * Math.sin(i * 2 * Math.PI / numberOfSides)
		            cxt.lineTo (movex, movey);
		        }
		        for(var i = 1; i <= numberOfSides; i += 1) {
		            cxt.moveTo(Xcenter, Ycenter)
		            cxt.lineTo(Xcenter + size * Math.cos(i * 2 * Math.PI / numberOfSides), Ycenter + size * Math.sin(i * 2 * Math.PI / numberOfSides))
		            cxt.lineWidth = 0.5;
		            cxt.stroke;
		        }

		        var radius = 100;
		        cxt.arc(Xcenter, Ycenter, radius, 0, 2 * Math.PI, false);
		        cxt.strokeStyle = '#003300';
		        cxt.stroke();


